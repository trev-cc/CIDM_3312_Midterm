@model LoginViewModel

@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html>
    <head>

    </head>
    <body>
<div class="container">
    <div class="row">
        <div class="col-md-4">
		</div>
        <div class="col-md-4">
            <form class="form-horizontal"
                    asp-action="Convert"
                    method="POST">
